<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin" >

	<View
		android:id="@+id/CenterHelper"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true" />

	<TextView
		android:id="@+id/StartLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:text="@string/start_label" />

	<EditText
		android:id="@+id/StartDateText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/StartLabel"
		android:layout_toLeftOf="@+id/CenterHelper"
		android:inputType="date" >

		<requestFocus />
	</EditText>

	<EditText
		android:id="@+id/StartTimeText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_below="@+id/StartLabel"
		android:layout_marginLeft="@dimen/activity_horizontal_margin"
		android:layout_toRightOf="@+id/CenterHelper"
		android:inputType="time" />

	<TextView
		android:id="@+id/EndLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/StartDateText"
		android:layout_marginTop="@dimen/activity_vertical_margin"
		android:text="@string/end_label" />

	<EditText
		android:id="@+id/EndDateText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/EndLabel"
		android:layout_toLeftOf="@+id/CenterHelper"
		android:inputType="date" />

	<EditText
		android:id="@+id/EndTimeText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_below="@+id/EndLabel"
		android:layout_marginLeft="@dimen/activity_horizontal_margin"
		android:layout_toRightOf="@+id/CenterHelper"
		android:inputType="time" />

	<TextView
		android:id="@+id/PauseLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/EndDateText"
		android:layout_marginTop="@dimen/activity_vertical_margin"
		android:text="@string/pause_label" />

	<EditText
		android:id="@+id/PauseText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/PauseLabel"
		android:inputType="number" />

	<TextView
		android:id="@+id/CommentLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/PauseText"
		android:layout_marginTop="@dimen/activity_vertical_margin"
		android:text="@string/comment_label" />

	<EditText
		android:id="@+id/CommentText"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/CommentLabel"
		android:inputType="textMultiLine"
		android:minLines="3" />

</RelativeLayout>